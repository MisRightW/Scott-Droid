<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song_info_dialog_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1.3" >

        <TextView
            android:id="@+id/song_info_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="退出播放器"
            android:textColor="@color/text_lyric_show"
            android:textSize="28sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/horizonal_bar" />

        <TextView
            android:id="@+id/song_info_dialog_author_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="歌手 : "
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/song_info_dialog_author"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/song_info_dialog_author_left"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="退出播放器"
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/horizonal_bar" />

        <TextView
            android:id="@+id/song_info_dialog_album_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="专辑 : "
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/song_info_dialog_album"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/song_info_dialog_album_left"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="退出播放器"
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/horizonal_bar" />

        <TextView
            android:id="@+id/song_info_dialog_duration_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="时长 : "
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/song_info_dialog_duration"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/song_info_dialog_duration_left"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="退出播放器"
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/horizonal_bar" />

        <TextView
            android:id="@+id/song_info_dialog_size_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="文件大小 : "
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/song_info_dialog_size"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/song_info_dialog_size_left"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="退出播放器"
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/horizonal_bar" />

        <TextView
            android:id="@+id/song_info_dialog_formation_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="文件格式 : "
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/song_info_dialog_formation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/song_info_dialog_formation_left"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:text="退出播放器"
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1.5" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/horizonal_bar" />

        <TextView
            android:id="@+id/song_info_dialog_path_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="文件路径 : "
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/song_info_dialog_path"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/song_info_dialog_path_left"
            android:gravity="left|center_vertical"
            android:maxLines="3"
            android:text="退出播放器"
            android:textColor="@color/text_lyric_show"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_weight="1.3" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:src="@drawable/horizonal_bar" />

        <Button
            android:id="@+id/song_info_dialog_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/btn_selector"
            android:paddingBottom="4dp"
            android:paddingLeft="26dp"
            android:paddingRight="26dp"
            android:paddingTop="4dp"
            android:text="确  定"
            android:textSize="22sp" />
    </RelativeLayout>

</LinearLayout>