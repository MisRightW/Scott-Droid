<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song_info_dialog_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="15dp"
        android:layout_weight="6" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.example.view.MyVerticalSeekBar
                android:id="@+id/song_equalizer_dialog_band1_seekbar"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:max="100"
                android:thumbOffset="8dp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band1_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="+100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band1_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="-100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.example.view.MyVerticalSeekBar
                android:id="@+id/song_equalizer_dialog_band2_seekbar"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:max="100"
                android:thumbOffset="8dp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band2_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="+100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band2_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="-100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.example.view.MyVerticalSeekBar
                android:id="@+id/song_equalizer_dialog_band3_seekbar"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:max="100"
                android:thumbOffset="8dp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band3_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="+100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band3_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="-100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.example.view.MyVerticalSeekBar
                android:id="@+id/song_equalizer_dialog_band4_seekbar"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:max="100"
                android:thumbOffset="8dp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band4_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="+100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band4_down"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerVertical="true"
                android:gravity="center_horizontal"
                android:maxLines="1"
                android:text="-100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <com.example.view.MyVerticalSeekBar
                android:id="@+id/song_equalizer_dialog_band5_seekbar"
                style="@style/Widget.SeekBar.Normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:max="100"
                android:thumbOffset="8dp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band5_up"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
