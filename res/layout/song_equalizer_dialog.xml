                android:layout_centerVertical="true"
                android:gravity="center"
                android:maxLines="1"
                android:text="+100db"
                android:textColor="@color/text_lyric_show"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/song_equalizer_dialog_band5_down"
                android:layout_width="match_parent"
